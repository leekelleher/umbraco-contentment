<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
        <StaticWebAssetBasePath>/</StaticWebAssetBasePath>
    </PropertyGroup>

    <!-- NuGet package metadata -->
    <PropertyGroup>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <Product>Umbraco.Community.Contentment</Product>
        <Title>Contentment for Umbraco</Title>
        <Description>Contentment, a collection of components for Umbraco.</Description>
        <Version>5.0.0-develop</Version>
        <Authors>Lee Kelleher</Authors>
        <Company>Lee Kelleher</Company>
        <Copyright>2019 Â© Lee Kelleher</Copyright>
        <PackageId>Umbraco.Community.Contentment</PackageId>
        <PackageIcon>icon.png</PackageIcon>
        <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/leekelleher/umbraco-contentment</PackageProjectUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>umbraco umbraco-marketplace</PackageTags>
        <RepositoryUrl>https://github.com/leekelleher/umbraco-contentment</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <Using Alias="UmbConstants" Include="Umbraco.Cms.Core.Constants" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\docs\assets\img\logo.png" Pack="true" PackagePath="icon.png" />
        <None Include="..\..\LICENSE" Pack="true" PackagePath="" />
        <None Include="..\..\build\readme-nuget-main.md" Pack="true" PackagePath="README.md" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.3.0" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.3.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="11.0.0" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="11.0.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="13.0.0-rc1" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="13.0.0-rc1" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="node_modules\**;wwwroot\**" />
        <EmbeddedResource Remove="node_modules\**;wwwroot\**" />
        <None Remove="node_modules\**;wwwroot\**" />
    </ItemGroup>

    <Target Name="RemoveLuceneAnalyzer" BeforeTargets="CoreCompile">
        <ItemGroup>
            <Analyzer Remove="@(Analyzer)" Condition="%(FileName) == 'Lucene.Net.CodeAnalysis.CSharp'" />
        </ItemGroup>
    </Target>

    <Target Name="ContentmentPrepareAssets" BeforeTargets="DispatchToInnerBuilds">
        <Exec Command="npm run build" />
    </Target>

</Project>
